# Database Configuration - Environment Variables Template
# Copy this file to .env and update with your actual database credentials

# Database Connection Details
DB_HOST=localhost
DB_PORT=3306
DB_NAME=employee_db
DB_USERNAME=root
DB_PASSWORD=your_mysql_password_here

# Database Driver (usually no need to change)
DB_DRIVER=com.mysql.cj.jdbc.Driver

# Connection Pool Settings (Optional)
DB_MIN_POOL_SIZE=5
DB_MAX_POOL_SIZE=20
DB_ACQUIRE_INCREMENT=5